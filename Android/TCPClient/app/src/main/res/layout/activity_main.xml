<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.royalbob.tcpclient.MainActivity" >

    <!--显示的标题：目标端口号-->
    <TextView
        android:textSize="20dp"
        android:text="目标端口号"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp" />

    <!-- 用于填写端口号的文本框-->
    <EditText
        android:text="9000"
        android:id="@+id/Port_ET"
        android:inputType="number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--显示的标题：目标IP地址-->
    <TextView
        android:textSize="20sp"
        android:text="目标IP地址"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- 用于填写ip地址的文本框-->
    <EditText
        android:text="192.168.1.116"
        android:id="@+id/ip_ET"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--显示的标题：目标IP地址-->
    <TextView
        android:textSize="20sp"
        android:text="发送的消息"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- 用于发送信息的文本框-->
    <EditText
        android:id="@+id/Send_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <!-- 用于连接的按钮-->
        <Button
            android:text="连接"
            android:id="@+id/Connect_Bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Connect_onClick" />
        <!-- 用于发送信息的按钮-->
        <Button
            android:text="发送"
            android:id="@+id/Send_Bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="Send_onClick" />
        <!-- 用于接收信息的文本框-->
    </LinearLayout>

    <TextView
        android:id="@+id/Receive_TV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>